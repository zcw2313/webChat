extends ../../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 名字
            //-th 查看
            th 修改
            th 删除
        tbody
          each item in users
            tr(class="item-id-#{item._id}")
              td #{item.name}
              //-td: a(target="_blank",href="/detail/#{item._id}") 查看
              td: a(target="_blank",href="/admin/user/update/#{item.name}") 修改
              td
                button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
  script(src="/javascripts/delUser.js")