extends ../../layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/user/update")
        input(type="hidden",name="user[_id]",value="#{user._id}")
        input(type="hidden",name="user[name]",value="#{user.name}")
        .form-group
          label.col-sm-2.control-label 用户姓名
          .col-sm-10
            span #{user.name}
        .form-group
          label.col-sm-2.control-label(for="inputPassword") 用户密码
          .col-sm-10
            input#inputPassword.form-control(type="text",name="user[password]")
        .form-group
          label.col-sm-2.control-label(for="inputRole") 用户权限
          .col-sm-10
            input#inputRole.form-control(type="text",name="user[role]",value="#{user.role}")
        .form-group
          .col-sm-offset-2.col-sm-8
            button.btn.btn-default(type="submit") 录入               